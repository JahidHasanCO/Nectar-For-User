<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >


    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#F2F3F2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <ImageView
            android:id="@+id/productIconIv"
            android:scaleType="fitCenter"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_store" />

        <TextView
            android:textColor="@color/black"
            android:gravity="left"
            android:id="@+id/productNameTv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="110dp"
            android:text="Product name"
            android:textSize="15sp" />

        <TextView

            android:gravity="left"
            android:id="@+id/productQuantityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="128dp"
            android:text="Quantity"
            android:textSize="12sp" />
        <TextView
            android:textColor="@color/black"
            android:gravity="left"
            android:id="@+id/productDiscountPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"
            android:text="100$"
            android:textSize="15sp" />
        <TextView
            android:textColor="@color/black"
            android:gravity="left"
            android:id="@+id/productOriginalPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="165dp"
            android:text="100$"
            android:textSize="15sp" />
        <TextView
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:textColor="@color/purple_700"
            android:id="@+id/discountNoteTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/discount_note_shape"
            android:textSize="10sp"
            android:text="10% off"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addToCartBtn"
            android:layout_marginTop="153dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="end"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/add_to_cart_shape"
            >
            <ImageView
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_card_add"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>